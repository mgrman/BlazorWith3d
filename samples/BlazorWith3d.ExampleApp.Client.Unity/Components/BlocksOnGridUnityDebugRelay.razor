@using BlazorWith3d.ExampleApp.Client.Shared
@using BlazorWith3d.Shared
@using BlazorWith3d.Unity
@using Microsoft.Extensions.Logging
@inject ILogger<BlocksOnGridUnityDebugRelay> Logger
@implements IDisposable

@code {
    private BlocksOnGrid3DRenderer_BinaryApi? unityAppApi;
    private IDisposable? _rendererAssignment;

    [CascadingParameter] 
    public required I3DAppController ParentApp { get; set; }
    
    [Parameter] 
    public IBinaryApi DebugApi { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            await base.OnAfterRenderAsync(firstRender);
            return;
        }
        
        unityAppApi = new BlocksOnGrid3DRenderer_BinaryApi(DebugApi, new MemoryPackBinaryApiSerializer());
        _rendererAssignment=await ParentApp.InitializeRenderer(unityAppApi,null);
    }

    public void Dispose()
    {
        unityAppApi?.Dispose();
        _rendererAssignment?.Dispose();
    }

}