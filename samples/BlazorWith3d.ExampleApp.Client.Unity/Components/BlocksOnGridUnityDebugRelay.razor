@using BlazorWith3d.ExampleApp.Client.Unity.Shared
@using BlazorWith3d.Unity
@using Microsoft.Extensions.Logging
@rendermode InteractiveServer
@inject DebugRelayUnityApi DebugRelayUnityApi
@inject ILogger<BlocksOnGridUnityDebugRelay> Logger
@implements IDisposable

@code {
    private BlocksOnGrid3DApp? unityAppApi;

    [CascadingParameter] 
    public required I3DAppController ParentApp { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            await base.OnAfterRenderAsync(firstRender);
            return;
        }

        DebugRelayUnityApi.HandleThread(InvokeAsync);
        
        unityAppApi = new BlocksOnGrid3DApp(DebugRelayUnityApi);
        ParentApp.InitializeRenderer(unityAppApi);
    }

    public void Dispose()
    {
        if (unityAppApi != null)
        {
            ParentApp.InitializeRenderer(null);
            unityAppApi.Dispose();
        }
    }

}