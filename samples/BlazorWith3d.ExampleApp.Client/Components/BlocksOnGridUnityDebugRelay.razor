@using System.Diagnostics
@using Blazored.LocalStorage
@using BlazorWith3d.ExampleApp.Client.Unity.Shared
@using BlazorWith3d.Unity
@using BlazorWith3d.Unity.Shared
@rendermode InteractiveServer
@inject DebugRelayUnityApi debugRelayUnityApi

@code {

    [CascadingParameter] 
    public I3DAppController ParentApp { get; set; }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            await base.OnAfterRenderAsync(firstRender);
            return;
        }

        debugRelayUnityApi.HandleThread(InvokeAsync);
        
        ParentApp.InitializeRenderer(debugRelayUnityApi);
    }
}