@using Microsoft.JSInterop
@inject IJSRuntime JsRuntime
@inject ILogger<BaseJsRenderer> Logger
@implements BlazorWith3d.Shared.IBinaryApi
@using Microsoft.Extensions.Logging
@implements IAsyncDisposable

